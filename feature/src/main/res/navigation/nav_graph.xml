<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_home">

    <fragment
        android:id="@+id/fragment_home"
        android:name="com.sopt.now.feature.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_fragment_home_to_fragment_home_detail"
            app:destination="@id/fragment_home_detail" />
        <action
            android:id="@+id/action_fragment_home_to_fragment_my_page"
            app:destination="@id/fragment_my_page" />
    </fragment>
    <fragment
        android:id="@+id/fragment_search"
        android:name="com.sopt.now.feature.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/fragment_my_page"
        android:name="com.sopt.now.feature.mypage.MyPageFragment"
        android:label="MyPageFragment"
        tools:layout="@layout/fragment_my_page" />
    <fragment
        android:id="@+id/fragment_home_detail"
        android:name="com.sopt.now.feature.home.HomeDetailFragment"
        android:label="HomeDetailFragment"
        tools:layout="@layout/fragment_my_page" />
</navigation>
